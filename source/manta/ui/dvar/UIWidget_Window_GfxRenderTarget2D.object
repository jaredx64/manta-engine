PUBLIC ObjectInstance widgetChannelR;
PUBLIC ObjectInstance widgetChannelG;
PUBLIC ObjectInstance widgetChannelB;
PUBLIC ObjectInstance widgetChannelA;
PUBLIC ObjectInstance widgetDepth;
PUBLIC ObjectInstance widgetInverted;

PUBLIC const char *name;
PUBLIC GfxRenderTarget *rt = nullptr;

PUBLIC bool showChannelR = true;
PUBLIC bool showChannelG = true;
PUBLIC bool showChannelB = true;
PUBLIC bool showChannelA = true;
PUBLIC bool showDepth = false;
PUBLIC bool showInverted = false;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

PROTECTED void init()
