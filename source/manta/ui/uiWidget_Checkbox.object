////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// PUBLIC API

PUBLIC void set_enabled( const bool enable )
{
	enabled = enable;
}


PUBLIC bool is_enabled()
{
	return enabled;
}


PUBLIC void toggle()
{
	enabled = !enabled;
	if( callbackOnInteract ) { callbackOnInteract( *context, id ); }
}

